packages:
  yum:
    mesa-libGL: []
    glib2: []
    libXext: []
    libSM: []
    libXrender: []
    wget: []

container_commands:
  01_create_model_dir:
    command: "mkdir -p /var/app/current/models"
  02_download_model:
    command: "wget -q https://github.com/danielgatis/rembg/releases/download/v0.0.0/u2net.onnx -O /var/app/current/models/u2net.onnx"
    test: "[ ! -f /var/app/current/models/u2net.onnx ]"

option_settings:
  aws:elasticbeanstalk:application:environment:
    U2NET_HOME: "/var/app/current/models"
    PYTHONPATH: "/var/app/current"